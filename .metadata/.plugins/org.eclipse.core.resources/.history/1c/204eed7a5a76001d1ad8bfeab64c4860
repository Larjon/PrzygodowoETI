package entity;

import java.awt.Color;
import java.awt.Graphics2D;
import java.io.IOException;

import javax.imageio.ImageIO;

import main.GamePanel;
import main.KeyHandler;

public class Player extends Entity{
	
	GamePanel gp;
	KeyHandler keyH;
	
	public Player(GamePanel gp, KeyHandler keyH) {
		
		this.gp = gp;
		this.keyH = keyH;
		
		setDefaultValues();
		getPlayerImage();
	}
	
	public void setDefaultValues() {
		x = 100;
		y = 100;
		speed = 4;
		direction = "down"; 		//pierwsza pozycja startowa
	}
	
	
	public void getPlayerImage() {
		try {
			
			up1 = ImageIO.read(getClass().getResourceAsStream("/plyer/przod.png"));
			up2 = ImageIO.read(getClass().getResourceAsStream("/plyer/przod1.png"));
			down1 = ImageIO.read(getClass().getResourceAsStream("/plyer/tyl1.png"));
			down2 = ImageIO.read(getClass().getResourceAsStream("/plyer/tyl2.png"));
			left1 = ImageIO.read(getClass().getResourceAsStream("/plyer/lewo1.png"));
			left2 = ImageIO.read(getClass().getResourceAsStream("/plyer/lewo2.png"));
			right1 = ImageIO.read(getClass().getResourceAsStream("/plyer/prawo1.png"));
			right2 = ImageIO.read(getClass().getResourceAsStream("/plyer/prawo2.png"));
			
		}catch(IOException e) {
			e.printStackTrace();
		}
	}
	
	
	public void update() {
		
		if(keyH.upPressed == true) {
			direction = "up";		
					            // Poruszanie sie za pomocÄ… klawiatury
			y -= speed;
		}
		else if(keyH.downPressed == true) {
			direction = "down";
			y += speed;
		}
		else if(keyH.leftPressed == true) {
			direction = "left";
			x -= speed;
		}
		else if(keyH.rightPressed == true) {
			direction = "right";
			x += speed;
		}
	}
	
	public void draw(Graphics2D g2) {
		g2.setColor(Color.white);
		
		g2.fillRect(x, y, gp.tileSize, gp.tileSize);
	}
		
	

}
